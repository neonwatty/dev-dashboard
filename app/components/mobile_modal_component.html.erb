<!-- Modal backdrop -->
<div id="<%= id %>" 
     class="<%= modal_wrapper_classes %>" 
     data-controller="modal"
     data-modal-backdrop-close-value="<%= backdrop_close %>"
     role="dialog" 
     aria-modal="true" 
     aria-labelledby="<%= title_id %>">
  
  <!-- Backdrop -->
  <div class="<%= backdrop_classes %>"
       data-action="<%= backdrop_action %>"
       data-modal-target="backdrop"></div>
  
  <!-- Modal container -->
  <div class="<%= modal_container_classes %>">
    <!-- Modal content -->
    <div class="<%= modal_content_classes %>"
         data-modal-target="content">
      
      <!-- Header -->
      <div class="<%= header_classes %>">
        <h3 id="<%= title_id %>" class="<%= title_classes %>">
          <%= title %>
        </h3>
        <button type="button" 
                class="<%= close_button_classes %>"
                data-action="click->modal#close"
                aria-label="Close modal">
          <%= close_icon_svg %>
        </button>
      </div>
      
      <!-- Content -->
      <div class="<%= content_classes %>">
        <%= content %>
      </div>
      
      <!-- Footer (optional) -->
      <% if show_footer %>
        <div class="<%= footer_classes %>">
          <%= content_for :modal_footer if content_for?(:modal_footer) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
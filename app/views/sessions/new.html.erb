<div class="min-h-screen">
  
  <div class="flex min-h-screen items-center justify-center bg-gray-50 dark:bg-gray-900 px-4 py-12 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <div class="flex justify-center">
        <svg class="h-12 w-12 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <h2 id="sign-in-heading" class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100">
        Sign in to Dev Dashboard
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400">
        Or
        <%= link_to "create a new account", new_registration_path, class: "font-medium text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300" %>
      </p>
    </div>

    <% if auth_required = flash[:auth_required] %>
      <div class="rounded-md bg-blue-50 dark:bg-blue-900/50 p-4 border border-blue-200 dark:border-blue-700">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400 dark:text-blue-300" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <h3 class="text-sm font-medium text-blue-800 dark:text-blue-200">
              Authentication Required
            </h3>
            <div class="mt-2 text-sm text-blue-700 dark:text-blue-300">
              <p><%= auth_required["message"] %></p>
            </div>
            <div class="mt-4 flex space-x-3">
              <button type="submit" form="sign-in-form" class="inline-flex items-center px-3 py-2 border border-transparent text-xs font-medium rounded text-blue-700 dark:text-blue-200 bg-blue-100 dark:bg-blue-800 hover:bg-blue-200 dark:hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-blue-400">
                Sign In Now
              </button>
              <%= link_to "Learn More", root_path, class: "inline-flex items-center px-3 py-2 border border-blue-300 dark:border-blue-600 text-xs font-medium rounded text-blue-700 dark:text-blue-300 bg-white dark:bg-gray-800 hover:bg-blue-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-blue-400" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if alert = flash[:alert] %>
      <div class="rounded-md bg-red-50 dark:bg-red-900/50 p-4" role="alert" aria-live="polite">
        <p class="text-sm text-red-800 dark:text-red-200"><%= alert %></p>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="rounded-md bg-green-50 dark:bg-green-900/50 p-4" role="status" aria-live="polite">
        <p class="text-sm text-green-800 dark:text-green-200"><%= notice %></p>
      </div>
    <% end %>

    <!-- OAuth Providers Section -->
    <div class="space-y-3">
      <div class="text-center">
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">Sign in with your account</p>
      </div>
      
      <!-- OAuth buttons (disabled for now) -->
      <div class="grid grid-cols-2 gap-3">
        <button type="button" disabled class="relative inline-flex w-full justify-center items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400 cursor-not-allowed opacity-50" 
                title="GitHub OAuth - Coming Soon">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
          </svg>
          GitHub
        </button>
        
        <button type="button" disabled class="relative inline-flex w-full justify-center items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-800 text-sm font-medium text-gray-500 dark:text-gray-400 cursor-not-allowed opacity-50"
                title="Google OAuth - Coming Soon">
          <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Google
        </button>
      </div>
      
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300 dark:border-gray-600" />
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-gray-50 dark:bg-gray-900 text-gray-500 dark:text-gray-400">Or continue with email</span>
        </div>
      </div>
    </div>

    <%= form_with url: session_path, 
                  class: "mt-6 space-y-6", 
                  id: "sign-in-form", 
                  role: "form", 
                  "aria-labelledby": "sign-in-heading",
                  data: { 
                    controller: "form-validation",
                    action: "submit->form-validation#validateBeforeSubmit"
                  } do |form| %>
      <fieldset>
        <legend class="sr-only">Sign in credentials</legend>
        <div class="-space-y-px rounded-md shadow-sm">
          <div>
            <%= form.label :email_address, "Email address", class: "sr-only" %>
            <%= form.email_field :email_address, 
                                required: true, 
                                autofocus: true, 
                                autocomplete: "email",
                                placeholder: "Email address",
                                value: params[:email_address],
                                "aria-required": "true",
                                "aria-label": "Email address",
                                data: { 
                                  "form-validation-target": "email",
                                  "form-validation-valid-class": "ring-green-500 dark:ring-green-400",
                                  "form-validation-invalid-class": "ring-red-500 dark:ring-red-400",
                                  "form-validation-checking-class": "ring-blue-500 dark:ring-blue-400"
                                },
                                class: "relative block w-full rounded-t-md border-0 py-1.5 px-3 text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-blue-600 dark:focus:ring-blue-400 sm:text-sm sm:leading-6" %>
          </div>
          <div>
            <%= form.label :password, "Password", class: "sr-only" %>
            <%= form.password_field :password, 
                                   required: true, 
                                   autocomplete: "current-password",
                                   placeholder: "Password",
                                   maxlength: 72,
                                   "aria-required": "true",
                                   "aria-label": "Password",
                                   class: "relative block w-full rounded-b-md border-0 py-1.5 px-3 text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-blue-600 dark:focus:ring-blue-400 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </fieldset>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <input id="remember-me" 
                 name="remember_me" 
                 type="checkbox" 
                 data-form-validation-target="rememberMe"
                 class="h-4 w-4 rounded border-gray-300 dark:border-gray-600 text-blue-600 dark:text-blue-400 focus:ring-blue-600 dark:focus:ring-blue-400 bg-white dark:bg-gray-800">
          <label for="remember-me" class="ml-2 block text-sm text-gray-900 dark:text-gray-100">
            Remember me
          </label>
        </div>
        
        <div class="text-sm">
          <%= link_to "Forgot your password?", new_password_path, class: "font-medium text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in", 
                       class: "group relative flex w-full justify-center rounded-md bg-blue-600 dark:bg-blue-500 px-3 py-2 text-sm font-semibold text-white hover:bg-blue-500 dark:hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:focus-visible:outline-blue-400 disabled:opacity-50 disabled:cursor-not-allowed" %>
      </div>
    <% end %>
  </div>
</div>
</div>
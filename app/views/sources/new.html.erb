<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Add New Source</h1>
    <%= link_to "Back to Sources", sources_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <%= form_with(model: @source, local: true, class: "space-y-6") do |form| %>
      <% if @source.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <h4 class="font-bold">Please fix the following errors:</h4>
          <ul class="list-disc list-inside">
            <% @source.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, 
                             placeholder: "e.g., Hugging Face Forum", 
                             class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :source_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :source_type, 
                         options_for_select([
                           ['Discourse Forum', 'discourse'],
                           ['GitHub Repository', 'github'],
                           ['Reddit Subreddit', 'reddit'],
                           ['RSS Feed', 'rss']
                         ]), 
                         { prompt: 'Select source type' },
                         { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
        </div>
      </div>

      <div>
        <%= form.label :url, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.url_field :url, 
                          placeholder: "e.g., https://discuss.huggingface.co", 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-sm text-gray-500 mt-1">
          Examples: https://discuss.huggingface.co, https://github.com/owner/repo, https://www.reddit.com/r/MachineLearning
        </p>
      </div>

      <div>
        <%= form.label :config, "Configuration (JSON)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :config, 
                          placeholder: '{"key": "value"}', 
                          rows: 4,
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-sm text-gray-500 mt-1">
          Optional JSON configuration for API keys, filters, etc.
        </p>
      </div>

      <div class="flex items-center">
        <%= form.check_box :active, class: "mr-2" %>
        <%= form.label :active, "Active (start fetching immediately)", class: "text-sm font-medium text-gray-700" %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", sources_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= form.submit "Create Source", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>

  <!-- Help Section -->
  <div class="mt-8 bg-blue-50 rounded-lg p-6">
    <h3 class="text-lg font-medium text-blue-900 mb-4">Source Configuration Examples</h3>
    
    <div class="space-y-4">
      <div>
        <h4 class="font-medium text-blue-800">Discourse Forums</h4>
        <p class="text-sm text-blue-700">
          <strong>URL:</strong> https://discuss.huggingface.co or https://discuss.pytorch.org<br>
          <strong>Config:</strong> No configuration needed
        </p>
      </div>
      
      <div>
        <h4 class="font-medium text-blue-800">GitHub Repositories</h4>
        <p class="text-sm text-blue-700">
          <strong>URL:</strong> https://github.com/owner/repo<br>
          <strong>Config:</strong> {"token": "your_github_token", "labels": ["bug", "help wanted"]}
        </p>
      </div>
      
      <div>
        <h4 class="font-medium text-blue-800">Reddit Subreddits</h4>
        <p class="text-sm text-blue-700">
          <strong>URL:</strong> https://www.reddit.com/r/MachineLearning<br>
          <strong>Config:</strong> {"client_id": "your_id", "client_secret": "your_secret"}
        </p>
      </div>
      
      <div>
        <h4 class="font-medium text-blue-800">RSS Feeds</h4>
        <p class="text-sm text-blue-700">
          <strong>URL:</strong> https://hnrss.org/newest?q=machine+learning<br>
          <strong>Config:</strong> {"keywords": ["AI", "ML", "deep learning"]}
        </p>
      </div>
    </div>
  </div>
</div>

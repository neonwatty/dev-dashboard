<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Edit Source</h1>
    <div class="flex space-x-4">
      <%= link_to "View Source", @source, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to Sources", sources_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <%= render 'form', source: @source %>
  </div>
</div>
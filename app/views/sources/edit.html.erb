<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Edit Source</h1>
    <div class="flex space-x-4">
      <%= link_to "View Source", @source, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to Sources", sources_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <%= form_with(model: @source, local: true, class: "space-y-6") do |form| %>
      <% if @source.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <h4 class="font-bold">Please fix the following errors:</h4>
          <ul class="list-disc list-inside">
            <% @source.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, 
                             class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :source_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :source_type, 
                         options_for_select([
                           ['Discourse Forum', 'discourse'],
                           ['GitHub Repository', 'github'],
                           ['Reddit Subreddit', 'reddit'],
                           ['RSS Feed', 'rss']
                         ], @source.source_type), 
                         {},
                         { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
        </div>
      </div>

      <div>
        <%= form.label :url, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.url_field :url, 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :config, "Configuration (JSON)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :config, 
                          rows: 4,
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :active, class: "mr-2" %>
        <%= form.label :active, "Active", class: "text-sm font-medium text-gray-700" %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", @source, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= form.submit "Update Source", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>

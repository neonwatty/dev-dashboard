<%= turbo_stream_from "source_status:all" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Sources</h1>
    <div class="flex space-x-4">
      <%= link_to "Dashboard", root_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to refresh_all_sources_path, 
                   method: :post, 
                   data: { turbo_confirm: "This will refresh all active sources. Continue?" },
                   class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded flex items-center" do %>
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        Refresh All Active
      <% end %>
      <%= link_to "Add New Source", new_source_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <!-- Responsive Table Container -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <% if @sources.any? %>
      <!-- Desktop View -->
      <div class="hidden lg:block overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Fetched</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Settings</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @sources.each do |source| %>
              <tr class="hover:bg-gray-50">
                <!-- Source Info -->
                <td class="px-4 py-4">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 w-8 h-8 rounded-lg flex items-center justify-center <%= source_icon_bg_class(source.name) %> mr-3">
                      <%= render "posts/source_icon", source: source.name %>
                    </div>
                    <div>
                      <%= link_to source.name, source, class: "text-sm font-medium text-blue-600 hover:text-blue-900" %>
                      <div class="text-xs text-gray-500"><%= source.source_type.humanize %></div>
                    </div>
                  </div>
                </td>
                
                <!-- URL -->
                <td class="px-4 py-4 max-w-xs">
                  <% if source.url.present? %>
                    <div class="text-sm text-gray-900 truncate" title="<%= source.url %>">
                      <%= link_to source.url.gsub(/^https?:\/\//, ''), source.url, target: "_blank", class: "text-blue-600 hover:text-blue-900" %>
                    </div>
                  <% else %>
                    <span class="text-xs text-gray-400 italic">No URL (API-based)</span>
                  <% end %>
                </td>
                
                <!-- Status -->
                <td class="px-4 py-4 whitespace-nowrap">
                  <%= render 'status_badge', source: source %>
                </td>
                
                <!-- Last Fetched -->
                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= source.last_fetched_at ? time_ago_in_words(source.last_fetched_at) + " ago" : "Never" %>
                </td>
                
                <!-- Settings -->
                <td class="px-4 py-4 whitespace-nowrap">
                  <div class="flex items-center space-x-2">
                    <% if source.active? %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        Active
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                        Inactive
                      </span>
                    <% end %>
                    <% if source.auto_fetch_enabled? %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800" title="Auto-fetch enabled">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
                        </svg>
                      </span>
                    <% end %>
                  </div>
                </td>
                
                <!-- Actions -->
                <td class="px-4 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex items-center space-x-1">
                    <%= button_to test_connection_source_path(source), 
                                 method: :post, 
                                 class: "p-1.5 text-blue-600 hover:text-blue-900 hover:bg-blue-50 rounded transition-colors",
                                 title: "Test connection" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    <% end %>
                    <%= button_to refresh_source_path(source), 
                                 method: :post, 
                                 class: "p-1.5 text-green-600 hover:text-green-900 hover:bg-green-50 rounded transition-colors",
                                 title: "Refresh",
                                 data: { disable_with: "..." } do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                      </svg>
                    <% end %>
                    <%= link_to edit_source_path(source), 
                                class: "p-1.5 text-yellow-600 hover:text-yellow-900 hover:bg-yellow-50 rounded transition-colors",
                                title: "Edit" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    <% end %>
                    <%= button_to source, 
                                 method: :delete, 
                                 data: { turbo_confirm: "Are you sure?" }, 
                                 class: "p-1.5 text-red-600 hover:text-red-900 hover:bg-red-50 rounded transition-colors",
                                 title: "Delete" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Mobile/Tablet Card View -->
      <div class="lg:hidden">
        <% @sources.each do |source| %>
          <div class="border-b border-gray-200 p-4">
            <div class="flex items-start justify-between">
              <div class="flex items-center space-x-3 flex-1">
                <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center <%= source_icon_bg_class(source.name) %>">
                  <%= render "posts/source_icon", source: source.name %>
                </div>
                <div class="flex-1 min-w-0">
                  <%= link_to source.name, source, class: "text-lg font-medium text-blue-600 hover:text-blue-900" %>
                  <div class="text-sm text-gray-500"><%= source.source_type.humanize %></div>
                  <% if source.url.present? %>
                    <div class="text-xs text-gray-400 truncate mt-1" title="<%= source.url %>">
                      <%= source.url.gsub(/^https?:\/\//, '') %>
                    </div>
                  <% end %>
                </div>
              </div>
              
              <div class="flex items-center space-x-1 ml-2">
                <%= button_to refresh_source_path(source), 
                             method: :post, 
                             class: "p-2 text-green-600 hover:bg-green-50 rounded",
                             data: { disable_with: "..." } do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                  </svg>
                <% end %>
                <%= link_to edit_source_path(source), class: "p-2 text-blue-600 hover:bg-blue-50 rounded" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                <% end %>
              </div>
            </div>
            
            <div class="mt-3 flex items-center justify-between">
              <div class="flex items-center space-x-2">
                <%= render 'status_badge', source: source %>
                <% if source.active? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Inactive</span>
                <% end %>
                <% if source.auto_fetch_enabled? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Auto-fetch</span>
                <% end %>
              </div>
              <div class="text-xs text-gray-500">
                <%= source.last_fetched_at ? time_ago_in_words(source.last_fetched_at) + " ago" : "Never" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <h3 class="text-lg font-medium text-gray-900 mb-2">No sources configured</h3>
        <p class="text-gray-500 mb-4">Add your first source to start aggregating content</p>
        <%= link_to "Add New Source", new_source_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>

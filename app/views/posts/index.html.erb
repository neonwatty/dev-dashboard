<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Developer Dashboard</h1>
    <div class="flex space-x-4">
      <%= link_to "Sources", sources_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <button onclick="refreshAll()" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
        Refresh All
      </button>
    </div>
  </div>

  <!-- Filter Bar -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <%= form_with url: posts_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= form.text_field :keyword, placeholder: "Search keywords...", 
                             value: params[:keyword], 
                             class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        
        <div>
          <%= form.select :source, options_for_select([['All Sources', '']] + @sources.map { |s| [s.titleize, s] }, params[:source]), 
                         {}, 
                         { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
        </div>
        
        <div>
          <%= form.select :status, options_for_select([['All Status', ''], ['Unread', 'unread'], ['Read', 'read'], ['Ignored', 'ignored'], ['Responded', 'responded']], params[:status]), 
                         {}, 
                         { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
        </div>
        
        <div>
          <%= form.select :sort, options_for_select([['Priority', 'priority'], ['Recent', 'recent']], params[:sort]), 
                         {}, 
                         { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
        </div>
      </div>
      
      <div class="flex space-x-4">
        <%= form.submit "Filter", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Clear", posts_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>

  <!-- Posts List -->
  <div class="space-y-4">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <div class="flex justify-between items-start">
          <div class="flex-1">
            <div class="flex items-center space-x-2 mb-2">
              <span class="inline-block px-2 py-1 text-xs font-semibold text-white bg-<%= post.source == 'huggingface' ? 'yellow' : 'orange' %>-500 rounded">
                <%= post.source.titleize %>
              </span>
              <span class="text-gray-500 text-sm">by <%= post.author %></span>
              <span class="text-gray-500 text-sm">â€¢ <%= time_ago_in_words(post.posted_at) %> ago</span>
              <% if post.priority_score && post.priority_score > 0 %>
                <span class="inline-block px-2 py-1 text-xs font-semibold text-white bg-red-500 rounded">
                  Priority: <%= post.priority_score.round(1) %>
                </span>
              <% end %>
            </div>
            
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              <%= link_to post.title, post.url, target: "_blank", class: "hover:text-blue-600" %>
            </h3>
            
            <% if post.summary.present? %>
              <p class="text-gray-600 mb-3"><%= truncate(post.summary, length: 200) %></p>
            <% end %>
            
            <% if post.tags_array.any? %>
              <div class="flex flex-wrap gap-2 mb-3">
                <% post.tags_array.each do |tag| %>
                  <span class="inline-block px-2 py-1 text-xs font-semibold text-gray-700 bg-gray-200 rounded">
                    <%= tag %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
          
          <div class="flex flex-col space-y-2 ml-4">
            <span class="inline-block px-2 py-1 text-xs font-semibold text-white bg-<%= status_color(post.status) %>-500 rounded">
              <%= post.status.titleize %>
            </span>
            
            <div class="flex flex-col space-y-1">
              <%= link_to "Read", mark_as_read_post_path(post), method: :patch, 
                         class: "text-xs bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded" %>
              <%= link_to "Ignore", mark_as_ignored_post_path(post), method: :patch, 
                         class: "text-xs bg-gray-500 hover:bg-gray-700 text-white font-bold py-1 px-2 rounded" %>
              <%= link_to "Responded", mark_as_responded_post_path(post), method: :patch, 
                         class: "text-xs bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="mt-8 flex justify-center">
    <%= paginate @posts %>
  </div>
</div>

<script>
  function refreshAll() {
    // This would trigger refresh for all active sources
    alert('Refresh functionality will be implemented with AJAX');
  }
</script>
